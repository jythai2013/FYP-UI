template(name="websiteCourseDetails")
	style.
		p.templateLineBreak {
			padding-bottom: 10px;
			margin: 5px;
			border-bottom: 1px solid #eee;
		}

		.table tbody > tr > td, 
		.table tbody > tr > th {
			border-top:0px;
		}
		body {
			font-size: 16px;
		}
	#sectionPageWrapper
		.row
			.col-lg-10.col-lg-offset-1
				h1.page-header Course Information
		+websiteCourseDetailsForm
		.row
			.col-lg-10.col-lg-offset-1
				p Harlow World

		.row
			.col-lg-10.col-lg-offset-1
				p.templateLineBreak
				a.btn.pull-right.admin-btn(href="/website/courseSignup/CGM01v3", type="button", style="margin-left:10px; margin-bottom: 30px; margin-right: 5px;") Sign Up Now
				a.btn.pull-right.admin-btn(onclick="window.history.back()") Back

template(name="websiteCourseDetailsForm")
	.row
		.col-lg-10.col-lg-offset-1
			.form-group
				.col-lg-5
					.pull-left
					img(src="img/courses/CGM01v3.jpg" height="320px" width="450px" alt="CGM01v3")
				.col-lg-6.col-lg-offset-1
					input#disabledInput.form-control(type="hidden", name="cId" value="is101", disabled="")
					input#disabledInput.form-control(type="hidden", name="cName" value="WPA Course 1", disabled="")
					.pull-left
						h3. CGM01v3
						h3. WSQ Certificate in Generic Manufacturing
						.br WDA Course
						.br(style="margin-bottom: 20px")
						label Lesson Schedule 
						.br From 1st January 2016 to 31st July 2016
						.br
						label No. of Sessions 
						| 30

	.row
		.col-lg-10.col-lg-offset-1
			.form-group
				label.col-sm-2.control-label Session Timings
				.col-sm-6
					label.radio
						input#group(type="radio", name="group", value="Class 1", checked="")
						| Class 1 (Wednesdays, 13:00 to 15:00)
					label.radio
						input#group(type="radio", name="group", value="Class 2")
						| Class 2 (Wednesdays, 15:30 to 17:00)

