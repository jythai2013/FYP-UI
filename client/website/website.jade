template(name="layoutWebsiteJade")
  style.
    span.icon-bar {
      background-color: #42DCA3;
    }
  .grayscale.page-top(data-spy="scroll", data-target=".navbar-fixed-top")
    // Navigation
    nav.grayscale-navbar.grayscale-navbar-custom.navbar-fixed-top(role="navigation", style="margin-bottom: 0")
      .container
        .navbar-header
          button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#page-top") 
           span.light STERLING 
           | HUB
        .collapse.navbar-collapse.links.navbar-right.navbar-maincollapse
          ul.nav.navbar-nav
            li.hidden
              a(href="#page-top")
            li
              a.grayscale-page-scroll(href="#about") About
            li
              a.grayscale-page-scroll(href="#courses") Courses
            li
              a.grayscale-page-scroll(href="#contact") Contact
            li(style="padding-top: 10px;")
              button.btn.btn.btn-sm.greenHoverColor(style="background-color:#333;", onclick="window.location.replace('{{pathFor route='loginPage'}}')") Portal Login
    +yield


template(name="websitePages")
    +intro
    +about
    +courses
    +contact
  

