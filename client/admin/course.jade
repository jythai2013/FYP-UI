                  td 
                    .form-group
                      textarea.form-control(id="cCDesc", value="#{courseDescription}")
                tr
                  th No. of Session(s)
                  td
                    .form-group
                      select.form-control(name="cSession", id="cCSession",)
                        option 1
                        option 2
                        option 3
                        option 4
                        option 5
                        option 6
                        option 7
                tr
                  th Fees
                  td
                    .form-group.input-group
                      span.input-group-addon $
                      input.form-control(type="text", id="cCFees", value="#{courseFees}")
                tr
                  th Min
                  td
                    .form-group.input-group
                      input.form-control(type="text", id="cCMin", value="#{courseMin}")
                tr
                  th Max
                  td
                    .form-group.input-group
                      input.form-control(type="text", id="cCMax", value="#{courseMax}")
                tr
                  th Type
                  td
                    .form-group.input-group
                      input.form-control(type="text", id="cCType", value="#{courseType}")
        .modal-footer
          button#editCourseButton.btn.btn-save(type="button", data-dismiss="modal") Save Changes