template(name="course")
  script(type='text/javascript').
      $('#myModal').modal('hide');
      $('body').removeClass('modal-open');
      $('.modal-backdrop').remove();
  #page-wrapper
    .row
      .col-lg-12
        h1.page-header Course: #{courseCode}
      // /.col-lg-12
    // /.row
    .row
      .col-lg-12
        .panel.panel-default(data-dismiss="modal")
          .panel-body
            h4 Course Details
            .table-responsive
              table#dataTables-example.table.table-striped.table-bordered
                tbody
                  tr
                    th Course Code
                    th #{courseCode}
                  tr
                    th Course Name
                    td #{courseName}
                  tr
                    th Course Type
                    td #{courseType}
                  tr
                    th Description
                    td #{description}
                  tr 
                    th No. of Session(s)
                    td #{courseNoOfSessions}
                  tr 
                    th Capacity
                    td #{courseMin} (min), #{courseMax} (max)
                  tr
                    th Fees
                    td #{courseFees}
                  tr
                    td
                    td 
                      button.btn.admin-btn.btn-sn(data-toggle="modal", data-target="#myModal")
                        | Edit Details
                      +editCourseForm
            p.breakH4
            h4 Class Management
            .table-responsive
              table#dataTables-example.table.table-bordered.table-hover
                tbody
                  tr
                    th Trainer
                    td #{trainers}
                    td 
                      input(type="button", value="Remove Trainer(s)")
                  tr 
                    th Classes
                    td
                      each groupsCourse
                        a(href="class/?cCode=#{courseCode}&cgrpNum=#{grpNum}") #{grpNum}
                        | ,
                    td(width="50px")
                      input(type="button", value="Remove Class(es)", data-toggle="modal", data-target="#removeClass", style="margin-top: -1%; right: 6%; background: #333; color:#fff")
                      +removeClass
                    
              button.btn.btn-sn.pull-right(data-toggle="modal", data-target="#addClass", style="margin-top: -1%; right: 6%; background: #333; color:#fff")
                        i.fa.fa-plus
                        | Class 
              +addClass
            // /.table-responsive

            p.breakH4
            h4 Course Materials
            .table-responsive
              table#dataTables-example.table.table-bordered.table-hover
                tbody
                  tr
                    th Session
                    th Topic
                    th(colspan="2") Course Materials
                  tr 
                    td 01
                    td Theory 101
                    td Files here
                    td(width="50px") 
                      input(type="button", value="Remove")
                  tr 
                    td 02
                    td Hands-on 101
                    td Files here
                    td(width="50px") 
                      input(type="button", value="Remove")
                  tr
                    td(colspan="4")
                      button.btn.btn-warning.btn-block(data-toggle="modal", data-target="#myModal2")
                        | Upload Course Material(s)
            // /.table-responsive
            // Button trigger modal
            // Modal
            #myModal2.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").adminFormDark
              .modal-dialog
                .modal-content
                  .modal-header
                    button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
                    h4#myModalLabel.modal-title Upload Files
                  .modal-body
                    | Select Course Material For Session:
                    .form-group
                      input.form-control(type="text", id="cUploadSession")
                      input(type ="hidden", value = "#{courseCode}", id ="cUploadCourseCode")                
                    input#myFileInput(type="file", name="courseMaterials")
                  .modal-footer
                    button.myFileInputButton.btn.admin-btn(type="button") Upload


