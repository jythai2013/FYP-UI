    .row
      .col-lg-12
        .panel.panel-default
          .panel-body
            h4 Insert Certificate
            
            form(name="", role="form", action="#", method="post")
            .table-responsive
              table#dataTables-example.table
                tbody  
                  tr
                    th Certificate Title
                    td
                      input.form-control(type="text", id="certTitle")
                  tr
                    th Course
                    td
                      input.form-control(type="text", id="courseId")
                  tr
                    th File
                    td 
                      input(type="file", id="fileName")
            button#uploadCertButton.btn.btn-save(type="button", data-dismiss="modal") Upload Cert

      .row
      .col-lg-12
        .panel.panel-default
          .panel-body
            h4 Certificate Management

            .table-responsive(style="width:100%")
              table#dataTables-example.table.table-striped.table-bordered
                thead
                  th Title
                  th Course Name
                  th startDate
                  th endDate
                  th click
                tbody
                
                  each finishedGroup
                    #{grpNum    }
                    #{courseCode}
                    #{startDate }
