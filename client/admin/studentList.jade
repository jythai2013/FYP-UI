template(name="studentList")
  #page-wrapper
    .row
      .col-lg-12
        h1.page-header Student List

    .row
      .col-lg-12
        .panel.panel-default
          .panel-body
            h4 Search For Student
            h5 Total No. of Students: {{getStudentCount}}
            .table-responsive
              table#dataTables-example.table.table-bordered
                tbody
                  tr
                    td(style="width: 50%;") Search
                      // usersSearchBox
                    td(style="width: 50%;") Type
                      select(id="type")
                        option(value="wda") "WDA"
                        option(value="nonwda") "Non-WDA"
            
            button#filter.btn.btn-save( style="position: static; margin-bottom:1%; margin-left:91%; background: #333; color:#fff") Search 
    .row
      .col-lg-12
        .panel.panel-default
          .panel-body
            h4 
              Student List Management
              button.btn.btn.btn-sm(data-toggle="modal", data-target="#addstudAcct" style="background: #333; color:#fff; float:right; margin-bottom:1%;")
                i.fa.fa-plus
                  | Student
            +addStudentAcctForm

            .table-responsive(style="width:100%")
              table#dataTables-example.table.table-striped.table-bordered
                thead
                  tr
                    th Name
                    th Particulars
                    th Enrollments
                    th Remarks
                    th Delete
                tbody
                  each students
                    tr
                      td #{firstName}  #{lastName}
                      td 
                        a.btn.admin-btn.bt-sn(data-target="#viewParticulars#{_id}", data-toggle="modal", data-id="#{_id}") Particulars
                      +viewParticularsForm
                      td 
                        a.btn.admin-btn.bt-sn(data-target="#viewStudCourses#{_id}", data-toggle="modal", data-id="#{_id}") Courses
                      td #{remarks}
                      td
                        a.btn.admin-btn.bt-sn(data-target="#deleteStud#{_id}", data-toggle="modal", data-id="#{_id}") Delete
                      +deleteStudentForm

template(name="addStudentAcctForm")
  #addstudAcct.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").adminFormDark
    .modal-dialog(style="width: 800px")
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
          h4#myModalLabel.modal-title Add New Student
        .modal-body
          form(name="", role="form", action="#", method="post")
            .table-responsive
              table#dataTables-example.table(style="background:#333")
                tbody  
                  tr
                  td First Name
                  td(style="width: 50%")
                    .form-group
                      input.form-control(type="text", id="firstName")
                  td Last Name
                  td(style="width: 50%") 
                    .form-group
                      input.form-control(type="text", id="lastName") 
                tr
                  td Gender
                  td 
                    label.radio
                      input#gender(type="radio", name="gender", value="Male", checked="")
                      | Male
                    label.radio
                      input#gender(type="radio", name="gender", value="Female")
                      | Female
                  td Date of Birth
                  td 
                    .form-group
                      input.form-control(type="date", id="dob")
                tr
                  td ID Type
                  td 
                    select(id="idType", style="color:black")
                      option(value="0") NRIC
                      option(value="1") FIN
                  td ID Number
                  td 
                    .form-group
                      input.form-control(type="text", id="idNo")
                tr
                  td Email
                  td 
                    .form-group
                      input.form-control(type='text', placeholder="email", id='email')
                  td Mobile Number
                  td 
                    input.form-control(type='text', id='mobileNo')
                tr
                  td Nationality
                  td 
                    .form-group
                      input.form-control(type='text', placeholder="Citizenship", id='nationality')
                  td Postal Code
                  td
                    input.form-control(type='text', placeholder="ZipCode", id='code')
                tr
                  td Residential Address
                  td(colspan='3')
                    .form-group
                      textarea.form-control(type='text', id='resAddr', placeholder='Apt. Street. Unit Number', style="max-width: 500px;")
                tr
                  td Highest Qualification
                  td 
                    .form-group
                      select(id='qualification', style="color:black")
                        option(value="0") PSLE
                        option(value="1") O/N'Level
                        option(value="2") A'Level
                        option(value="3") Diploma
                        option(value="4") Degree
                tr
                  td Proficieny
                  td 
                    .form-group
                      textarea.form-control(type='text',id='proficiency')
                tr
                  td NOK Name
                  td 
                    .form-group
                      input.form-control(type='text',id='nokName')
                  td Relationship
                  td
                    .form-group
                      select(id='nokReln', style="color:black")
                        option(value="Employer") Employer
                        option(value="Spouse") Spouse
                        option(value="Family") Family
                        option(value="Others") Co-worker
                        option(value="Relative") Relative
                        option(value="Friend") Friend
                tr
                  td NOK Contact
                  td
                    .form-group
                      input.form-control(type='text', id='nokTel')
                  td NOK Zipcode
                  td
                    .form-group
                      input.form-control(type='text', id='nokCode')
                tr 
                  td NOK Address
                  td(colspan="2")
                    .form-group
                      textarea.form-control(type='text', id='nokAddr')
                tr
                  td Remarks
                  td 
                    .form-group
                      textarea.form-control(type='text', id='remarks', placeholder='Financial Hold/ Term Payment/ etc.', style="max-width: 500px;")
            // /.table-responsive
        .modal-footer
          button#addStudentAcctButton.btn.btn-save(type="button", data-dismiss="modal") Add Student


