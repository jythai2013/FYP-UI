        .modal-body
          form(name="", role="form", action="facilityResult", method="post")
          .table-responsive
            table#dataTables-example.table(style="background:#333")
              tbody  
                tr
                  td Are you sure you want to delete
                tr
                  td First Name
                  td #{firstname}
                tr
                  td Last Name
                  td #{lastname}
                tr
                  td Mobile No
                  td #{mobileNo}
                tr
                  td Email
                  td #{email}
          // /.table-responsive
        .modal-footer
          button#deleteStudentButton.btn.btn-save(type="button", data-dismiss="modal") Confirm Delete
      // /.modal-content
    // /.modal-dialog
  // /.modal

