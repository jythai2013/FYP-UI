template(name="courseList")
  style.
    .panel-body{
      padding: 3%;
    }
    .col-lg-12{
      padding-left: 2%;
      padding-right: 2%;
    }
  #page-wrapper
    .row
      .col-lg-12
        h1.page-header Course List
      // /.col-lg-12
    // /.row
    .row
      .col-lg-12
        .panel.panel-default
          .panel-body
            h4 Course Details
              button.btn.btn.btn-sm(data-toggle="modal", data-target="#addCourse" style="position: absolute; margin-top: -1%; right: 6%; background: #333; color:#fff")
                        i.fa.fa-plus
                        | Course
            +addCourseForm

            .table-responsive
              table#dataTables-example.table.table-striped.table-bordered
                tbody
                  tr
                    th Code
                    th Name
                    th Type
                    th Fees
                    th Details
                    th Remarks
                  tr
                    each courses
                     td 
                       a(href="/course/?code=is101") =courses.courseCode
                     td=courses.courseName
                     td=courses.courseType
                     td=courses.fees
                     td
                       button.btn.admin-btn.btn-sn(data-toggle="modal", data-target="#viewCourse")
                         | More Details
                     td
                       button.btn.admin-btn.btn-sn(data-toggle="modal", data-target="#deleteCourse")
                         | Delete
            +viewCourseForm


template(name="addCourseForm")
  #addCourse.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").adminFormDark
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
          h4#myModalLabel.modal-title Add New Course
        .modal-body
          form(role="form", id="insert-addCourseForm", action="facilityResult", method="post")
          .table-responsive
            table#dataTables-example.table
              tbody
                tr
                  th Course Code
                  td
                    .form-group
                      input.form-control(type="text", id="cNewCode", placeholder="eg. IS101")
                tr
                  th Course Name  
                  td 
                    .form-group
                      input.form-control(type="text", id="cNewName") 
                tr
                  th Course Type  
                  td 
                    .form-group
                      input.form-control(type="text", id="cType") 
                tr
                  th Description
                  td 
                    .form-group
                      input.form-control(type="text", id="cNewDesc")
                tr
                  th Fees
                  td 
                    .form-group.input-group
                      span.input-group-addon $
                      input.form-control(type="text", id="cNewFee")
                tr
                  th Trainers
                  td 
                    .form-group
                      input.form-control(type="text", id="cTrainers")
            // /.table-responsive
          .modal-footer
            button#addCourseButton.btn.btn-save(type="button", data-dismiss="modal") Add Course
      // /.modal-content
    // /.modal-dialog
  // /.modal


template(name="viewCourseForm")
  #viewCourse.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").adminFormDark
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
          h4#myModalLabel.modal-title Course Detail
        .modal-body
          form(name="", role="form", action="facilityResult", method="post")
          .table-responsive
            table#dataTables-example.table
              tbody
                tr
                  th(colspan="2") courses.courseCode, courses.courseName   
                tr
                  td Min
                  td 
                    courses.min
                tr
                  td Max
                  td 
                    courses.max
                tr
                  td Description
                  td 
                    courses.description
                tr
                  td Fees
                  td courses.fees
          // /.table-responsive
        .modal-footer
          a(href="course/?code=is101", class="button btn admin-btn") Enter Course Page
      // /.modal-content
    // /.modal-dialog
  // /.modal


  template(name="deleteCourse")
  #deleteCourse.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").adminFormDark
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
          h4#myModalLabel.modal-title Course Detail
        .modal-body
          form(name="", role="form", action="facilityResult", method="post")
          .table-responsive
            table#dataTables-example.table
              tbody  
                tr
                  td Are you sure you want to delete
                tr
                  td Code
                  td course.courseCode
                tr
                  td Name
                  td course.courseName
          // /.table-responsive
        .modal-footer
          a#deleteCourse(class="button btn admin-btn") Confirm
      // /.modal-content
    // /.modal-dialog
  // /.modal