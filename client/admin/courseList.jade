  #editCourse.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").adminFormDark
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
          h4#myModalLabel.modal-title Course Detail
        .modal-body
          form(name="", role="form", action="facilityResult", method="post")
          .table-responsive
            table#dataTables-example.table
              tbody
                tr
                  th(colspan="2") Course Code, Course Name   
                tr
                  td Description:
                  td 
                    Some Description here
                tr
                  td Fees
                  td $120
          // /.table-responsive
        .modal-footer
          a(href="course", class="button btn admin-btn") Enter Course Page
      // /.modal-content
    // /.modal-dialog
  // /.modal