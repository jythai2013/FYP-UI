template(name="courseList")
  style.
    .panel-body{
      padding: 3%;
    }
    .col-lg-12{
      padding-left: 2%;
      padding-right: 2%;
    }
  #page-wrapper
    .row
      .col-lg-12
        h1.page-header Course List
      // /.col-lg-12
    // /.row
    .row
      .col-lg-12
        .panel.panel-default
          .panel-body
            h4 Course Details
              button.btn.btn.btn-sm(data-toggle="modal", data-target="#addCourse" style="position: absolute; margin-top: -1%; right: 6%; background: #333; color:#fff")
                        i.fa.fa-plus
                        | Course
            +addCourseForm

            .table-responsive
              table#dataTables-example.table.table-striped.table-bordered
                thead
                  tr
                    th Code
                    th Name
                    th Type
                    th Fees
                    th Details
                    th Remarks
                tbody
                  each courses
                    tr
                      td #{courseCode}  
                      td #{courseName}  
                      td #{courseType}  
                      td #{courseFees}
                      td
                        button#viewCourseDetailsButton.btn.admin-btn.btn-sn.viewCourse(data-toggle="modal", data-id='#{courseCode}', data-target="#viewCourse")
                          | More Details
                        +viewCourseForm
                      td
                        a.btn.admin-btn(href="#goDeleteCourse", data-toggle="modal", data-course-id="#{courseCode}") Delete
                      +deleteCourse

template(name="deleteCourse")
  script.
    $('#goDeleteCourse').on('show.bs.modal', function(e) {
      var courseId = $(e.relatedTarget).data('course-id');
      $(e.currentTarget).find('input[name="cID"]').val(courseId);
    });
  #goDeleteCourse.modal.adminFormDark
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
          h4#deleteCourseModal.modal-title Delete Course
        .modal-body
          p Are you sure you want to delete
          input(type="text" name="cID" value="" style="color:red")
        .modal-footer
          a#deleteCourse.button.btn.admin-btn Confirm
      // /.modal-content
    // /.modal-dialog
  // /.modal

template(name="addCourseForm")
  #addCourse.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").adminFormDark
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
          h4#myModalLabel.modal-title Add New Course
        .modal-body
          form(role="form", id="insert-addCourseForm", action="#", method="post")
          .table-responsive
            table#dataTables-example.table
               tbody
                tr
                  th Course Code
                  td
                    .form-group
                      input.form-control(type="text", id="cNewCode", placeholder="eg. IS101")
                tr
                  th Course Name  
                  td 
                    .form-group
                      input.form-control(type="text", id="cNewName") 
                tr
                  th Course Type  
                  td 
                    .form-group
                      input.form-control(type="text", id="cType") 
                tr
                  th Description
                  td 
                    .form-group
                      input.form-control(type="text", id="cNewDesc")
                tr
                  th Minimum
                  td 
                    .form-group.input-group
                      input.form-control(type="text", id="cNewMin")
                tr
                  th Maximum
                  td 
                    .form-group.input-group
                      input.form-control(type="text", id="cNewMax")
                tr
                  th Fees
                  td 
                    .form-group.input-group
                      span.input-group-addon $
                      input.form-control(type="text", id="cNewFee")
                tr
                  th Trainers
                  td 
                    .form-group
                      input.form-control(type="text", id="cTrainers")
            // /.table-responsive
          .modal-footer
            button#addCourseButton.btn.btn-save(type="button", data-dismiss="modal") Add Course
      // /.modal-content
    // /.modal-dialog
  // /.modal


template(name="viewCourseForm")
  #viewCourse.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").adminFormDark
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
          h4#myModalLabel.modal-title Course Detail
        .modal-body
          form(id="viewDetails", name="", role="form", action="#", method="post")
          .table-responsive
            table#dataTables-example.table(style="background-color:#333")
              tbody
                tr
                  th(colspan="2") #{courseCode}, #{courseName}   
                tr
                  td Min
                  td 
                    #{courseMin} 
                tr
                  td Max
                  td 
                    #{courseMax} 
                tr
                  td Description
                  td 
                    #{courseMin} 
                tr
                  td Fees
                  td #{courseFees}
          // /.table-responsive
        .modal-footer
          a(href="course/?code=#{courseCode}", class="button btn admin-btn") Enter Course Page
      // /.modal-content
    // /.modal-dialog
  // /.modal


