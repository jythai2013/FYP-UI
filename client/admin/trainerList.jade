template(name="trainerList")
  #page-wrapper
    .row
      .col-lg-12
        h1.page-header Trainer List
      // /.col-lg-12
    // /.row
    .row
      .col-lg-12
        .panel.panel-default
          .panel-body
            h4 Trainer List Management
              button.btn.btn.btn-sm(data-toggle="modal", data-target="#addtrainerAcct" style="position: absolute; margin-top: -1%; right: 6%; background: #333; color:#fff")
                        i.fa.fa-plus
                        | Trainer
            +addTrainerAcctForm

            .table-responsive
              table#dataTables-example.table.table-striped.table-bordered
                thead
                  tr
                    th Name
                    th Particulars
                    th Credentials
                    th Remarks
                tbody
                  each students
                    tr
                      td #{firstName}  #{lastName} 
                      td  
                        form(role="form", id="insert-addTrainerForm", action="#", method="post")
                          a(href="?profile=#{currentCourseCode.firstName}&#{currentCourseCode.lastName}", class="button btn admin-btn") Particulars
                      td
                        form(role="form", id="insert-viewCredForm", action="#", method="post")
                          button#viewTrainerCredentialsButton.btn.admin-btn.btn-sn(data-toggle="modal", data-id= '#{_email}', data-target="#viewCV")
                            | Edit Credentials
                        +viewCVForm
                      td
                        button.btn.admin-btn.btn-sn(data-toggle="modal", data-id='#{_courseCode}',data-target="#deleteTrainer")
                          | Delete
                        +deleteTrainerForm 


template(name="viewCVForm")
  #viewCV.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").adminFormDark
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
          h4#myModalLabel.modal-title CV Detail
        .modal-body
          form(role="form", id="viewDetails", action="facilityResult", method="post")
          .table-responsive
            table#dataTables-example.table(style="background:#333")
              currentTrainer
              tbody
                tr
                  th Email
                  td
                    .form-group
                      input.form-control(type="text", id="trainerAcctUserName", value="#{currentStud.email}")
                tr
                  th Password
                  td 
                    .form-group
                      input.form-control(type="hidden", id="trainerAcctPwd", value="#{currentStud.password}")
                tr
                  td Fees
                  td 
                    .form-group
                      input.form-control(type='texr',value='#{currentStud.fees}', id='studFees')
                tr
                  td Paid
                  td 
                    label.radio
                      input#gender_filter(type="radio", name="gender_filter", value="1", checked="")
                      | Yes
                    label.radio
                      input#gender_filter(type="radio", name="gender_filter", value="0")
                      | No
                tr
                  td Remarks
                  td 
                    input.form-control(type='text', id='studRemarks')
                    | password
        .modal-footer
          button#editTrainerAcct.btn.admin-btn.btn-sn(data-toggle="modal", data-id='#{_courseCode}',data-target="#deleteTrainer")
             | Save Changes
      // /.modal-content
    // /.modal-dialog
  // /.modal    

template(name="addTrainerAcctForm")
  #addtrainerAcct.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").adminFormDark
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
          h4#myModalLabel.modal-title Add New Trainer
        .modal-body
          form(role="form", id="insert-addTrainerForm", action="#", method="post")
          .table-responsive
            table#dataTables-example.table(style="background:#333")
              tbody
                tr
                  th First Name
                  td
                    .form-group
                      input.form-control(type="text", id="studFirstName", placeholder="eg. IS101")
                tr
                  th Last Name  
                  td 
                    .form-group
                      input.form-control(type="text", id="studLastName") 
                tr
                  td Email
                  td 
                    input.form-control(type='text',value='studentEmailHere', id='studEmail')
                tr
                  td Password
                  td 
                    input.form-control(type='hidden',value='password', id='studPassword')
                    | password
                tr
                  td Attach CV
                  td
                    input#myFileInput(type="file", name="courseMaterials")
                tr
                  td Remarks
                  td 
                    textarea.form-control(type='text',value='',id='studRemarks', placeholder='Financial Hold/ Term Payment/ etc.', style="max-width: 500px;")
            // /.table-responsive
        .modal-footer
          button#addTrainerAcctButton.btn.btn-save(type="button", data-dismiss="modal") Add Trainer
      // /.modal-content
    // /.modal-dialog
  // /.modal




template(name="deleteTrainerForm")
  #deleteTrainer.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").adminFormDark
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
          h4#myModalLabel.modal-title Delete Trainer
        .modal-body
          form(name="", role="form", action="facilityResult", method="post")
          .table-responsive
            table#dataTables-example.table(style="background:#333")
              tbody  
                tr
                  td Are you sure you want to delete
                tr
                  td First Name
                  td blah
                tr
                  td Last Name
                  td #{currentCourseCode.courseName}
          // /.table-responsive
        .modal-footer
          button#deleteTrainerButton.btn.btn-save(type="button", data-dismiss="modal") Confirm
      // /.modal-content
    // /.modal-dialog
  // /.modal
