template(name="loginLayout")
  style.
    h1 {
      text-align: center;
      color: #ddd;
      text-shadow: 0px 2px 3px #666;
    }
    .panel-default {
      background-color: #333333;
    }
    .panel-body {
      border-color: #42DCA3;
    }
    body {
      background-color: #333333;
    }
    i {
      color: #42dca3;
    }
    span {
      border-color: #42dca3;
    }

  .container(style="margin-top: 15%")
    h1 Sterling Training Hub Admin
    +yield

template(name="loginModal")
  #loginModal.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").adminDarkForm
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
          h4.modal-title Please Sign In
        .modal-body
          +loginForm

template(name="loginForm")
  form#login-form(role="form")
    fieldset
      .form-group
        input#login-email.form-control(type="email", placeholder="E-mail", name="email", autofocus="")
      .form-group
        input#login-password.form-control(type="password", placeholder="Password", name="password", value="")
      if errorMessage
        .row
          .col-sm-12.col-xs-12
            .alert.alert-danger
              | #{errorMessage}
      if currentUserMessage
        .row
          .col-sm-12.col-xs-12
            .alert.alert-success
              | #{currentUserMessage}
      .row
        .col-sm-4.col-xs-4
          input#login-button.btn-success.form-control(type="submit", value="Login")
        .col-sm-2.col-xs-2.col-sm-offset-1.col-xs-offset-1
          p or
        .col-sm-4.col-xs-4
          button#sign-up-button.btn.btn-link.form-control(type="button") Sign up

template(name="loginPage")
    .row
      .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
        .login-panel.panel.panel-default
          .panel-heading
            a.close(href="/website") &#215;
            h3.panel-title Administrator Login
          .panel-body
            form#sign-up-form(role="form")
              fieldset
                .form-group.input-group
                  span.input-group-addon(style="background-color: #333; border-color: #42dca3")
                    i.fa.fa-envelope.fa-fw
                  input#login-email.form-control(type="email", placeholder="E-mail", name="email", autofocus="")
                .form-group.input-group
                  span.input-group-addon(style="background-color: #333; border-color: #42dca3")
                    i.fa.fa-key.fa-fw
                  input#login-password.form-control(type="password", placeholder="Password", name="password", value="")
                if errorMessage
                      .alert.alert-danger
                        | #{errorMessage}
                if currentUserMessage
                      .alert.alert-success
                        | #{currentUserMessage}
                if signUpSuccessMessage
                      .alert.alert-success
                        | #{signUpSuccessMessage}

                input#login-button.admin-btn.form-control(type="submit", value="LOGIN", style="margin-top: 10%;")