template(name="administratorList")
  #page-wrapper
    .row
      .col-lg-12
        h1.page-header Administrator List
      // /.col-lg-12
    // /.row
    .row
      .col-lg-12
        .panel.panel-default
          .panel-body
            h4 Administrator List Management
              button.btn.btn.btn-sm(data-toggle="modal", data-target="#addAdminAcct" style="position: absolute; margin-top: -1%; right: 6%; background: #333; color:#fff")
                i.fa.fa-plus
                | Administrator
            +addAdminAcctForm

            .table-responsive
              table#dataTables-example.table.table-striped.table-bordered
                thead
                  tr
                    th Name
                    th Particulars
                    th AccessRights
                    th Delete User
                tbody
                  each administrators
                    tr
                      td #{firstName}  #{lastName} 
                      td  
                        a.btn.admin-btn.bt-sn(data-target="#viewAdminDetails#{_id}", data-toggle="modal", data-id="#{_id}") Particulars, Access Rights
                        +viewAdminParticulars
                      td
                        #{accessType}
                      td
                        a.btn.admin-btn.bt-sn(data-target="#goDeleteAdmin#{_id}", data-toggle="modal", data-id="#{_id}") Delete
                        +deleteAdminForm 


template(name="addAdminAcctForm")
  div.modal(id="addAdminAcct#{_id}" tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").adminFormDark
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
          h4#myModalLabel.modal-title Add New Administrator
        .modal-body
          form(role="form", id="insert-addAdminForm", action="#", method="post")
          .table-responsive
            table.table(style="background:#333")
              tbody
                tr
                  th First Name
                  td
                    .form-group
                      input.form-control(type="text", id="firstName")
                  th Last Name  
                  td 
                    .form-group
                      input.form-control(type="text", id="lastName") 
                tr
                  td Email
                  td
                    input.form-control(type='text', id='email')
                  td MobileNo
                  td 
                    input.form-control(type='text', id='mobileNo')
                tr
                  td Access Rights
                  td 
                    label.checkbox-inline
                      input(type="checkbox", value="1", name="accessRightId")
                      | Maintain Accounts
                    br 
                    label.checkbox-inline
                        input(type="checkbox", value="2", name="accessRightId")
                        | Maintain Courses
                    br 
                    label.checkbox-inline
                      input(type="checkbox", value="3", name="accessRightId")
                      | Maintain Classes
                    br 
                    label.checkbox-inline
                      input(type="checkbox", value="4", name="accessRightId")
                      | Maintain Facilities

            // /.table-responsive
        .modal-footer
          button#addAdminAcctButton.btn.btn-save(type="button", data-dismiss="modal") Add User
      // /.modal-content
    // /.modal-dialog
  // /.modal




template(name="viewAdminParticulars")
  div.modal(id="viewAdminDetails#{_id}" tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").adminFormDark
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
          h4#myModalLabel.modal-title Update Administrator Details
        .modal-body
          form(name="", role="form", action="#", method="post")
          .table-responsive
            table#dataTables-example.table(style="background:#333")
              tbody  
                tr 
                  td Name
                  td #{firstName} #{lastName}
                tr
                  td Mobile No
                  td 
                    input.form-control(type="text", id="mobileNo", value="#{mobileNo}")
                    input.form-control(type="hidden", id="accessType", value="#{accessType}")
        .modal-footer
          button#editAdminAccountButton.btn.btn-save(type="button", data-dismiss="modal") Update


template(name="deleteAdminForm")
  div.modal(id="goDeleteAdmin#{_id}" tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").adminFormDark
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
          h4#myModalLabel.modal-title Delete Administrator
        .modal-body
          form(name="", role="form", action="#", method="post")
          .table-responsive
            table#dataTables-example.table(style="background:#333")
              tbody  
                tr
                  td(colspan="2") Are you sure you want to delete: 
                  b #{firstName} #{lastName}
                tr
                  td Mobile No:
                  td #{mobileNo}
          // /.table-responsive
        .modal-footer
          button#deleteAdminButton.btn.btn-save(type="button", data-dismiss="modal") Confirm
      // /.modal-content
    // /.modal-dialog
  // /.modal
